<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme - Material Design 3 -->
    <style name="Base.Theme.TasteClub" parent="Theme.Material3.Light.NoActionBar">

        <!-- Brand colors -->
        <item name="colorPrimary">@color/primary_brown</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/surface_card</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>

        <item name="colorSecondary">@color/accent_caramel</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surfaces & background -->
        <item name="colorSurface">@color/surface_card</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="android:colorBackground">@color/background_beige</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@color/background_beige</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">@color/background_beige</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Component defaults -->
        <item name="materialButtonStyle">@style/Widget.TasteClub.PrimaryButton</item>
        <item name="textInputStyle">@style/Widget.TasteClub.TextInputLayout</item>
        <item name="bottomNavigationStyle">@style/Widget.TasteClub.BottomNavigationView</item>

    </style>

    <!-- App theme -->
    <style name="Theme.TasteClub" parent="Base.Theme.TasteClub" />

</resources>
