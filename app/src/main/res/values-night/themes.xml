<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme variant -->
    <style name="Base.Theme.TasteClub" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_brown</item>
        <item name="colorPrimaryVariant">@color/accent_caramel</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Surface colors - dark variants -->
        <item name="colorSurface">#1C1B1F</item>
        <item name="colorOnSurface">#E6E1E5</item>

        <!-- Background colors - dark variants -->
        <item name="android:colorBackground">#1C1B1F</item>
        <item name="colorOnBackground">#E6E1E5</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#1C1B1F</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#1C1B1F</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>
</resources>