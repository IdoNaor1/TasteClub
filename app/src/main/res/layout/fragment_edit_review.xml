<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="@color/background_beige"
    tools:context=".ui.review.EditReviewFragment">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Restaurant info (display only) -->
            <TextView
                android:id="@+id/restaurantInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_detail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                style="@style/TextAppearance.TasteClub.Create_review_label" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/restaurantCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.TasteClub.RestaurantCard"
                app:layout_constraintTop_toBottomOf="@id/restaurantInfoLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        android:contentDescription="@string/location_icon_desc"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <LinearLayout
                        android:id="@+id/restaurantInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintStart_toEndOf="@id/locationIcon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- Keep name/address on a single line and ellipsize to avoid vertical growth -->
                        <TextView
                            android:id="@+id/restaurantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/restaurant_name_placeholder"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/restaurantAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/restaurant_address_placeholder"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:singleLine="true" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/ratingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rating"
                style="@style/TextAppearance.TasteClub.Create_review_label"
                app:layout_constraintTop_toBottomOf="@id/restaurantCard"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <android.widget.RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="0"
                app:layout_constraintTop_toBottomOf="@id/ratingText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/reviewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_label"
                style="@style/TextAppearance.TasteClub.Create_review_label"
                app:layout_constraintTop_toBottomOf="@id/ratingBar"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/reviewInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/reviewText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/reviewEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/review_placeholder"
                    android:minLines="1"
                    android:maxLines="8"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/addPhotosText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_photos"
                style="@style/TextAppearance.TasteClub.Create_review_label"
                app:layout_constraintTop_toBottomOf="@id/reviewInputLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/addPhotosCard"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                style="@style/Widget.TasteClub.AddPhotosCard"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/addPhotosText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Selected photo preview (initially gone). Will be toggled by fragment. -->
                <ImageView
                    android:id="@+id/selectedPhotoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:contentDescription="@string/selected_photo_preview_desc" />

                <LinearLayout
                    android:id="@+id/addPhotosOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/addPhotoIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_camera"
                        android:contentDescription="@string/camera_icon_desc"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_photos_tap"
                        style="Widget.TasteClub.TextButton"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateReviewButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/update_review"
                android:enabled="false"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/addPhotosCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Delete button - red, full width, below update -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteReviewButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/delete"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/updateReviewButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.TasteClub.TextButton"
                android:backgroundTint="@color/error_red"
                android:textColor="@color/on_error_red" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
