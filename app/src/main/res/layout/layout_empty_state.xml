<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardBackgroundColor="@color/surface_card"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Empty State Icon -->
        <ImageView
            android:id="@+id/emptyStateIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_home"
            android:alpha="0.5"
            android:contentDescription="@string/feed"
            app:tint="@color/text_secondary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/emptyStateTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_feed_title"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/emptyStateIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/emptyStateDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/empty_feed_description"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/emptyStateTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="280dp" />

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/emptyStateActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_a_review"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_brown"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@id/emptyStateDescriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

